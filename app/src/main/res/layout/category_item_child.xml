<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:fresco="http://schemas.android.com/tools"
    android:id="@+id/rl_category_home_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_category_home_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:src="@mipmap/account_avatar"
        fresco:ImageScaleType="fitCenter"
        />

    <TextView
        android:id="@+id/tv_category_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有声书"
        android:layout_toRightOf="@id/iv_category_home_image"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/md_black"
        />
</RelativeLayout>
