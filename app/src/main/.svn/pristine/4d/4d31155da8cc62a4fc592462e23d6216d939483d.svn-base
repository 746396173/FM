<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="3dp"
    app:cardBackgroundColor="@color/category_item_color"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:contentPadding="1dp"

    >
   <!-- xmlns:fresco="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"-->
<RelativeLayout
    android:id="@+id/rl_category_home_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_category_home_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="3dp"
        android:gravity="center"
        android:src="@mipmap/account_avatar"
        fresco:ImageScaleType="fitCenter"
        />

    <TextView
        android:id="@+id/tv_category_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有声书"
        android:layout_toRightOf="@id/iv_category_home_image"
        android:textSize="15sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/md_black"
        />
</RelativeLayout>
</android.support.v7.widget.CardView>