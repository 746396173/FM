    public static Music queryMusicInfoByUrl(String url) {
        return RealmManager.getMainThreadInstance()
                .getMainRealm()
                .where(Music.class)
                .equalTo("url", url)
                .findFirst();
    }

    public static Music queryMusicInfoByAlbumId(long albumId) {
        return RealmManager.getMainThreadInstance()
                .getMainRealm()
                .where(Music.class)
                .equalTo("albumId", albumId)
                .findFirst();
    }

